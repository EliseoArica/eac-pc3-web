<div class="row mt-3">
    <div class="col-md-6 mx-auto">
        <div class="card p-2">
            <div class="card-header">
                <span style="text-align: center;">
                    <h4>Nuevo contacto</h4>
                </span>
            </div>
            <div class="card-body">
                <form action="/contacts/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group mb-4">
                        <input type="text" name="name" class="form-control" placeholder="Nombre" required>
                    </div>
                    <div class="form-group mb-4">
                        <input type="text" name="surname" class="form-control" placeholder="Apellido" required>
                    </div>
                    <div class="form-group mb-4">
                        <input type="number" name="phone" class="form-control" placeholder="TelÃ©fono/Celular" min="1000000" max="999999999" required>
                    </div>
                    <div class="input-group mb-4">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01" required>
                            <label for="inputGroupFile01" class="custom-file-label"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary form-control">
                            Guardar contacto
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>